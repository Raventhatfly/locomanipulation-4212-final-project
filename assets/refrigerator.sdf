<?xml version="1.0"?>
<sdf version="1.7">
  <model name="refrigerator">
    <!-- Main refrigerator body -->
    <link name="refrigerator_base">
      <inertial>
        <mass>200.0</mass>
        <pose>0 0 0.9 0 0 0</pose>
        <inertia>
          <ixx>50.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>50.0</iyy>
          <iyz>0</iyz>
          <izz>20.0</izz>
        </inertia>
      </inertial>
      <!-- Main body box -->
      <visual name="body">
        <pose>0 0 0.9 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.7 1.8</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.92 0.92 0.95 1.0</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0.9 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.7 1.8</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Lower door -->
    <link name="door_lower">
      <pose>0.3 0.35 0.6 0 0 0</pose>
      <inertial>
        <mass>30.0</mass>
        <inertia>
          <ixx>3.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>2.0</iyy>
          <iyz>0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <!-- Door panel -->
      <visual name="door">
        <pose>0.03 -0.35 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.06 0.7 1.15</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.78 0.80 0.84 1.0</diffuse>
        </material>
      </visual>
      <!-- Handle as a simple box -->
      <visual name="handle">
        <pose>0.07 -0.65 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.02 0.08 0.35</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0.03 -0.35 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.06 0.7 1.15</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Upper door -->
    <link name="door_upper">
      <pose>0.3 0.35 1.45 0 0 0</pose>
      <inertial>
        <mass>20.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.5</iyy>
          <iyz>0</iyz>
          <izz>0.6</izz>
        </inertia>
      </inertial>
      <!-- Door panel -->
      <visual name="door">
        <pose>0.03 -0.35 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.06 0.7 0.55</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.78 0.80 0.84 1.0</diffuse>
        </material>
      </visual>
      <!-- Handle as a simple box -->
      <visual name="handle">
        <pose>0.07 -0.65 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.02 0.08 0.25</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0.03 -0.35 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.06 0.7 0.55</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Lower door hinge joint -->
    <joint name="door_lower_joint" type="revolute">
      <parent>refrigerator_base</parent>
      <child>door_lower</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>0</lower>
          <upper>2.0</upper>
        </limit>
        <dynamics>
          <damping>1.0</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Upper door hinge joint -->
    <joint name="door_upper_joint" type="revolute">
      <parent>refrigerator_base</parent>
      <child>door_upper</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>0</lower>
          <upper>2.0</upper>
        </limit>
        <dynamics>
          <damping>1.0</damping>
        </dynamics>
      </axis>
    </joint>
  </model>
</sdf>
